{
  "name": "aria-platform",
  "version": "5.2.0",
  "description": "ARIA - AI Risk Intelligence Assistant v5.2.0 - Enterprise GRC Platform with AI-Powered Intelligence & Advanced Analytics",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:docker": "node src/server.js",
    "start:dev": "node --watch src/server.js",
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=aria-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name aria-platform",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "test:health": "curl http://localhost:3000/health",
    "db:migrate:local": "wrangler d1 migrations apply aria-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply aria-production",
    "db:seed": "wrangler d1 execute aria-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute aria-production --local",
    "db:console:prod": "wrangler d1 execute aria-production",
    "docker:build": "docker build -t aria-platform .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/database:/app/database -v $(pwd)/logs:/app/logs aria-platform",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "users:export": "node scripts/export-users.cjs",
    "users:migrate": "node scripts/migrate-users.cjs"
  },
  "dependencies": {
    "hono": "^4.9.1",
    "@hono/node-server": "^1.12.2",
    "better-sqlite3": "^11.3.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "risk-management",
    "grc",
    "compliance",
    "docker",
    "ubuntu",
    "enterprise",
    "security",
    "audit"
  ],
  "author": "ARIA Development Team",
  "license": "MIT"
}
