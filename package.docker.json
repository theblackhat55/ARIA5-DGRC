{
  "name": "dmt-risk-assessment",
  "version": "2.0.1",
  "description": "DMT Risk Assessment Platform - Ubuntu Docker Edition with Keycloak SSO",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development node src/server.js",
    "build": "echo 'No build step required for Node.js server'",
    "test": "echo 'Tests not implemented yet'",
    "health": "curl -f http://localhost:3000/health",
    "db:init": "node -e \"require('./src/database/sqlite.js').initializeDatabase()\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "keycloak:start": "docker compose -f docker-compose.keycloak.yml up -d",
    "keycloak:stop": "docker compose -f docker-compose.keycloak.yml down",
    "keycloak:users": "./create-keycloak-users.sh",
    "logs": "tail -f logs/app.log",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:logs": "pm2 logs --nostream"
  },
  "dependencies": {
    "hono": "^4.6.11",
    "@hono/node-server": "^1.13.7",
    "better-sqlite3": "^11.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.4.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "nodemon": "^3.1.7"
  },
  "keywords": [
    "risk-management",
    "grc",
    "compliance",
    "enterprise",
    "keycloak",
    "sso",
    "docker",
    "ubuntu"
  ],
  "author": "DMT Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dmt-risk-assessment.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/dmt-risk-assessment/issues"
  },
  "homepage": "https://github.com/your-username/dmt-risk-assessment#readme"
}